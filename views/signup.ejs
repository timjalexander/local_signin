    <div class="ui three column page grid">
      <div class="column"></div>
      <div class="column">
        <div>
            <h1 class="ui header"><span class="jumbo-font"> <i class="sign in icon"></i>Signup</span></h1>
            <br>
            <% if (message.length > 0) { %>
		        <div class="ui message red"><%= message %></div>
	        <% } %>
            <form action="/signup" method="post">
                <div class="ui segment">
                    <div class="ui input fluid huge">
                        <label>Email Address</label>
                        <input type="email" name="email" id="email">
                    </div>
                    <div class="ui input fluid huge">
                        <label>Password</label>
                        <input type="password" name="password" id="password">
                    </div>
                    <br>
                    <button type="submit" class="ui button green huge">
                        Signup!
                    </button>
                    <div class="ui horizontal divider">Or</div>
                    <br>
                    <p>Already have an account? <a href="/login">Login</a></p>
	                <p>Or go <a href="/">home</a>.</p>
                </div>
            </form>
        </div>
        <div class="column"></div>
      </div>


    </div>

    <script type="text/javascript">
      
        new BootUp(["javascript/jquery.1.11.0.min.js", "javascript/semantic.min.js", "javascript/main.js"],{
          success: function(){
            console.log('Bootup: load successful.');
          }
        });
      
    </script>

</body>

</html>